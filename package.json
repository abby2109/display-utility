  ],
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "husky": "^2.7.0",
    "lint-staged": "^8.2.1",
    "tslint": "^5.20.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^1.7.1"
